<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#18181A"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Create_account">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:src="@drawable/purple_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login Your Account"
            android:textColor="#F5F3FF"
            android:gravity="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtUsername"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_input"
            android:gravity="start|center_vertical"
            android:layout_marginTop="15dp"
            android:hint=" Username"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_input"
            android:layout_marginTop="10dp"
            android:hint=" Email"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txtPhonenumber"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_input"
            android:layout_marginTop="10dp"
            android:hint=" Phonenumber"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_input"
            android:layout_marginTop="10dp"
            android:hint=" Password"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txtRetypePassword"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner_input"
            android:layout_marginTop="10dp"
            android:hint=" Re-type Password"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="20dp"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="#F5F3FF"/>


        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F5F3FF"
            android:text="have Account?  Login"
            android:layout_marginTop="50dp"/>

    </LinearLayout>
</LinearLayout>